{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location of the resources (e.g. westus, eastus, westeurope)."
      }
    }
  },
  "resources": [
    {
      "apiVersion": "2018-09-01-preview",
      "name": "ordersvnet",
      "type": "Microsoft.ServiceFabricMesh/networks",
      "location": "[parameters('location')]",
      "dependsOn": [],
      "properties": {
        "kind": "Local",
        "description": "Service Fabric Mesh Network for Order Monitoring Service.",
        "networkAddressPrefix": "10.0.0.0/24"
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "orderServiceGateway",
      "type": "Microsoft.ServiceFabricMesh/gateways",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.ServiceFabricMesh/networks/ordersvnet"
      ],
      "properties": {
        "description": "Service Fabric Mesh Gateway for order Monitoring Service.",
        "sourceNetwork": {
          "name": "Open"
        },
        "destinationNetwork": {
          "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'ordersvnet')]"
        },
        "tcp": [
          {
            "name": "web",
            "port": 80,
            "destination": {
              "applicationName": "orderServiceApp",
              "serviceName": "orderMonitoringService",
              "endpointName": "orderServiceListener"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2018-09-01-preview",
      "name": "orderServiceApp",
      "type": "Microsoft.ServiceFabricMesh/applications",
      "location": "[parameters('location')]",
      "dependsOn": [
        "Microsoft.ServiceFabricMesh/networks/ordersvnet"
      ],
      "properties": {
        "description": "Service Fabric Mesh Application.",
        "services": [
          {
            "type": "Microsoft.ServiceFabricMesh/services",
            "name": "orderMonitoring",
            "properties": {
              "description": "Service Fabric Mesh orderMonitoring Application",
              "osType": "linux",
              "codePackages": [
                {
                  "name": "orderServiceCode",
                  "image": "srikantan67/orderflowbusinessmonitor:v1",
                  "endpoints": [
                    {
                      "name": "orderServiceListener",
                      "port": "50039"
                    }
                  ],
                  "resources": {
                    "requests": {
                      "cpu": "1",
                      "memoryInGB": "1"
                    }
                  }
                },
                {
                  "name": "orderServiceSideCar",
                  "image": "seabreeze/azure-mesh-helloworld-sidecar:1.0-alpine",
                  "resources": {
                    "requests": {
                      "cpu": "1",
                      "memoryInGB": "1"
                    }
                  }
                }
              ],
              "replicaCount": "1",
              "networkRefs": [
                {
                  "name": "[resourceId('Microsoft.ServiceFabricMesh/networks', 'ordersvnet')]",
                  "endpointRefs": [
                    {
                      "name": "orderServiceListener"
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "publicIPAddress": {
      "value": "[reference('orderServiceGateway').ipAddress]",
      "type": "string"
    }
  }
}